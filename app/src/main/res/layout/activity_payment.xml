<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">


        <TextView
            android:id="@+id/radio_net_banking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/bank_details"
            android:textSize="16sp"
            android:textColor="@color/darker_grey" />

        <LinearLayout
            android:id="@+id/net_banking_data_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical">

                <EditText
                    android:id="@+id/card_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_bg"
                    android:hint="@string/enter_account_number"
                    android:importantForAutofill="no"
                    android:layout_marginLeft="@dimen/thirty_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/thirty_margin"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/darker_grey"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/radius_ten"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="@dimen/radius_ten"
                    android:textSize="14sp"
                    tools:targetApi="o" />

                <EditText
                    android:id="@+id/bank_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/thirty_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/thirty_margin"
                    android:background="@drawable/search_bg"
                    android:hint="@string/enter_bank_name"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/darker_grey"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/radius_ten"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="@dimen/radius_ten"
                    android:textSize="14sp"
                    tools:targetApi="o" />

                <EditText
                    android:id="@+id/branch_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_bg"
                    android:hint="@string/enter_branch_name"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_marginLeft="@dimen/thirty_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/thirty_margin"
                    android:textColor="@color/darker_grey"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/radius_ten"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="@dimen/radius_ten"
                    android:textSize="14sp"
                    tools:targetApi="o" />


        </LinearLayout>

    <Button
        android:id="@+id/pay_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/button_bg"
        android:textColor="@color/colorWhite" />



</LinearLayout>




